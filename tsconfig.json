{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "declaration": true,
    "outDir": "server-build",
    "rootDir": "server",
    "removeComments": true,
    "isolatedModules": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "server/**/*"
  ],
  "exclude": [
    "client"
  ]
}