{
  "name": "photoboard",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./server-build/bin/index.js",
    "prod:test": "NODE_ENV=production npm run start",
    "debug": "DEBUG=photoboard:* npm run build:live",
    "dev": "NODE_ENV=development concurrently \"npm run dev:client\" \"npm run debug\"",
    "build": "npm run build:server && npm run build:client",
    "dev:client": "cd client && npm run dev",
    "build:live": "nodemon --exec ./node_modules/.bin/ts-node -- ./server/bin/index.ts",
    "build:server": "cd server && tsc",
    "build:client": "cd client && npm run build"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "compression": "^1.7.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "express-jwt": "^5.3.0",
    "helmet": "^3.9.0",
    "jwks-rsa": "^1.2.1",
    "mongodb": "^3.0.0-rc0",
    "morgan": "~1.9.0",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/compression": "0.0.35",
    "@types/cookie-parser": "^1.4.1",
    "@types/debug": "0.0.30",
    "@types/express": "^4.11.0",
    "@types/express-jwt": "0.0.38",
    "@types/helmet": "0.0.37",
    "@types/mongodb": "^2.2.18",
    "@types/morgan": "^1.7.35",
    "@types/node": "^8.5.2",
    "@types/serve-favicon": "^2.2.30",
    "concurrently": "^3.5.1",
    "nodemon": "^1.14.1",
    "ts-node": "^4.0.2",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  }
}
